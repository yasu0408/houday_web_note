<h3 class="text-center">【今日の日付】 <%= l Date.current, format: :long %></h3>
<%= form_with model: @note, local: true do |f| %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, value: Date.current, class: "form-control" %>
  </div>
  <div>
    <%= f.label :condition %>
    <%= f.select :condition, Note::CONDITION, {}, { value: "ふつう", class: "custom-select"} %>
  </div>
  <div>
    <%= f.label :humor %>
    <%= f.select :humor, Note::HUMOR,{}, {value: "ふつう", class: "custom-select"} %>
  </div>
  <div class="form-group">
    <%= f.label :temp %>
    <%= f.number_field :temp, in: 35.0..40.0, step: "0.1", value: "36.0", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_field :message, value: "よろしくおねがいします。", class: "form-control" %>
    <small id="messageHelp" class="form-text text-muted">おこさまの様子や気になることがあればご記入ください</small>
  </div>
  <div>
    <%= f.submit "送信", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
