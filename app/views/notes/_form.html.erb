<h3 class="text-center">【今日の日付】 <%= l Date.current, format: :long %></h3>
<%= form_with model: @note, local: true do |f| %>
  <div class="form-group">
    <%= f.label :date %>
    <% if controller.controller_name == 'notes' && controller.action_name == 'edit' %>
      <%= f.date_field :date, value: @note.date, class: "form-control" %>
    <% else %>
      <%= f.date_field :date, value: Date.current, class: "form-control" %>
    <% end %>
  </div>
  <div>
    <%= f.label :condition %>
    <%= f.select :condition, Note::CONDITION, {}, { value: "ふつう", class: "custom-select"} %>
  </div>
  <div>
    <%= f.label :humor %>
    <%= f.select :humor, Note::HUMOR,{}, {value: "ふつう", class: "custom-select"} %>
  </div>
  <div class="form-group">
    <%= f.label :temp %>
    <%= f.number_field :temp, in: 35.0..40.0, step: "0.1", value: @note.temp, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :message, value: @note.message, class: "form-control", maxlength: "300" %>
    <small id="messageHelp" class="form-text text-muted">おこさまの様子や気になることがあればご記入ください</small>
  </div>
  <div class="d-flex justify-content-center">
    <%= f.submit "送信", class: "btn btn-primary btn-block w-50" %>
  </div>
<% end %>
