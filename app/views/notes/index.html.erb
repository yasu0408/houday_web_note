<h1 class="text-center">名前:<%= current_user.name %> 連絡帳一覧 </h1>
<div class="d-flex justify-content-center my-4">
  <%= link_to "今日の連絡帳を記入する", new_note_path, class: "btn btn-primary btn-block" %>
</div>
<table class="table table-bordered table-striped mt-4">
  <thead class="text-nowrap text-center table-head">
    <tr>
      <th scope="col">インデックス番号</th>
      <th scope="col">利用日</th>
      <th scope="col">更新日</th>
      <th scope="col">確認・変更</th>
    </tr>
  </thead>
  <tbody>
    <% @notes.each.with_index(1) do |note, i| %>
      <tr>
        <th scope="row" class="text-center"><%= i %></th>
        <td class="break-word text-center text-nowrap"><%= l note.date, format: :long %></td>
        <td class="break-word text-center text-nowrap"><%= l note.date, format: :long %></td>
        <td class="text-nowrap text-center">
          <%= link_to note, class: "btn btn-info px-5 mx-3" do %>
            <i class="fas fa-eye"></i> <span class="d-none d-md-inline"> 確認</span>
          <% end %>
          <%= link_to edit_note_path(note), class: "btn btn-success px-5 ms-3" do %>
            <i class="fas fa-exchange-alt"></i> <span class="d-none d-md-inline"> 変更</span>
          <% end %>
          <%= link_to note, class: "btn btn-danger #{'disabled'} px-5 mx-3" do %>
            <i class="fas fa-eraser"></i> <span class="d-none d-md-inline"> 削除</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
